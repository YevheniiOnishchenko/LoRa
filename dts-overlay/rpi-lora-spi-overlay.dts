/dts-v1/;
/plugin/;

/ {
	fragment@0 {
		target = <&spi>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			spidev@0 {
				status = "disabled";
			};

			spidev@1 {
				status = "disabled";
			};
			
			sx1278@0 {
				compatible = "sx1278";
				reg = <0>;
				status = "okay";
				spi-max-frequency = <0x3b60>;
				center-carrier-frq = <433000000>;
				clock-frequency = <32000000>;
				rf-bandwidth = <500000>;
				minimal-RF-channel = /bits/ 8 <0>;
				maximum-RF-channel = /bits/ 8 <0>;
				tx_power = <1600>;
			};

			sx1278@1 {
				compatible = "sx1278";
				reg = <1>;
				status = "okay";
				spi-max-frequency = <0x3b60>;
				center-carrier-frq = <433000000>;
				clock-frequency = <32000000>;
				rf-bandwidth = <500000>;
				minimal-RF-channel = /bits/ 8 <0>;
				maximum-RF-channel = /bits/ 8 <0>;
				tx_power = <1600>;
			};
		};
	};
};
